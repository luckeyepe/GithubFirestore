<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activites.MainActivity">

    <Button
            android:text="Add Student"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_mainAddStudent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="68dp"/>
    <Button
            android:text="Search Student"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_mainSearchStudent" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_mainAddStudent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Delete Student"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_mainDeleteStudent" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_mainSearchStudent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Update Student Info"
            android:layout_height="wrap_content"
            android:id="@+id/btn_mainUpdateStudentInfo" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_mainDeleteStudent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_width="212dp"/>
</android.support.constraint.ConstraintLayout>