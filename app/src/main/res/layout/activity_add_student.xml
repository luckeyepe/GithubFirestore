<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activites.AddStudentActivity">

    <EditText
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt_addStudentFirstName" android:layout_marginTop="20dp"
            android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/edt_addStudentMiddleName" android:layout_marginRight="8dp"
            android:hint="First Name" app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.869"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt_addStudentMiddleName"
            android:hint="Middle Name"
            app:layout_constraintTop_toTopOf="@+id/edt_addStudentFirstName"
            app:layout_constraintStart_toEndOf="@+id/edt_addStudentFirstName" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt_addStudentLastName" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_addStudentFirstName" android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp" android:hint="Last Name"/>
    <EditText
            android:layout_width="123dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt_addStudentCoarse" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
            android:hint="Coarse"/>
    <EditText
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/edt_addStudentYearLevel"
            android:inputType="number"
            android:hint="Year Level" app:layout_constraintTop_toTopOf="@+id/edt_addStudentCoarse"
            app:layout_constraintStart_toEndOf="@+id/edt_addStudentCoarse" android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"/>
    <TextView
            android:text="Student Details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textStyle="bold"
            android:textSize="24sp" android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="28dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp"/>
    <TextView
            android:text="Student Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="22sp"
            android:layout_marginStart="28dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_addStudentIDNumber"/>
    <TextView
            android:text="Coarse Year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textSize="22sp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/edt_addStudentLastName"
            android:layout_marginStart="28dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp"/>
    <TextView
            android:text="ID Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:textSize="22sp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginStart="28dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edt_addStudentIDNumber"
            android:hint="ID Number" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"/>
    <Button
            android:text="Enroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_addStudentEnroll" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="84dp" android:layout_marginRight="84dp"/>
    <Button
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_addStudentCancel" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="92dp" android:layout_marginStart="92dp"/>
</android.support.constraint.ConstraintLayout>